<div id="carousel-example-generic-{{ content.id }}" class="carousel slide" data-interval="false" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        {% for image in content.images %}
            <li data-target="#carousel-example-generic" data-slide-to="0" {% if loop.first %}class="active"{% endif %}></li>
        {% endfor %}
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        {% for image in content.images %}
            <div class="item {% if loop.first %}active{% endif %}">
                <img src="{{ image.image.src }}" alt="{{ image.image.alt }}"  class="img-responsive" />
                <div class="carousel-caption">
                    {{ image.body | raw }}
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic-{{ content.id }}" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic-{{ content.id }}" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>

<div>
    {{ content.body | raw }}
</div>
