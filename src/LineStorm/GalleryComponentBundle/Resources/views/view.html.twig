<div id="carousel-example-generic-{{ content.id }}" class="carousel slide" data-interval="false" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        {% for image in content.images %}
            <li data-target="#carousel-example-generic" data-slide-to="0" {% if loop.first %}class="active"{% endif %}></li>
        {% endfor %}
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        {% for image in content.images %}
            <div class="item {% if loop.first %}active{% endif %}">

                <img class="article-image bttrlazyloading img-responsive lazy-load-image"
                     data-bttrlazyloading-xs='{"src": "{{ image.image.getVersion('small').src }}", "width" : {{ image.image.getVersion('small').width }},  "height" : {{ image.image.getVersion('small').height }}}'
                     data-bttrlazyloading-sm='{"src": "{{ image.image.getVersion('small').src }}", "width" : {{ image.image.getVersion('small').width }},  "height" : {{ image.image.getVersion('small').height }}}'
                     data-bttrlazyloading-md='{"src": "{{ image.image.getVersion('medium').src }}", "width" : {{ image.image.getVersion('medium').width }},  "height" : {{ image.image.getVersion('medium').height }}}'
                     data-bttrlazyloading-lg='{"src": "{{ image.image.getVersion('large').src }}", "width" : {{ image.image.getVersion('large').width }},  "height" : {{ image.image.getVersion('large').height }}}'
                     alt="{{ image.image.alt }}" credits="{{ image.image.credits }}"
                />

                <div class="carousel-caption">
                    {{ image.body | raw }}
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic-{{ content.id }}" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic-{{ content.id }}" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
